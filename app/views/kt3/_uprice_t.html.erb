 <% @price=Nprice1.find :first ,:conditions=>["k1c=?",@cat.k1c] %>


 <% if @price and @price.pp %>

           <% @price_spec=TovSpec.find(:first,:conditions=>['legal_id=? and k1c=?',@user.client_id,@cat.k1c]) if login?%>
           <% if @price_spec %>
               <% uprice=@price_spec.price_spec %>
               <span class="uprice_t" id="price<%=@cat.id%>"  style="color:green;">

