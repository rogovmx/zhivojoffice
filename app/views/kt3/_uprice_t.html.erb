               </span>

           <%else%>
               <%  uprice = findprice(@cat.k1c)   %>

              <%if @price.p1_old and (@price.pp < @price.p1_old) %>
              <span style="color:#000000; font-size:12px; font-family: serif,Tahoma,sans-serif; text-decoration: line-through;">
              <%=  number_to_currency(@price.p1_old, :unit => '',:delimiter=>' ') %>р.&nbsp;</span><br/>
              <%end%>

               <span class="uprice_t" id="price<%=@cat.id%>" >

               <% @pr=number_to_currency(uprice, :unit => '',:delimiter=>' ')%>
               <%= @pr[0,@pr.size-2] -%><span class="kopeiki_t"><%= @pr[-2,2]  -%></span>р.&nbsp;

               </span>
          <% end %>

<% else %>
