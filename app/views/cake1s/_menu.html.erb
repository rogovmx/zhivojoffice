<% if params[:menu] == nil  %>
<% @m = '0'   %>
<% else %>
<% @m=params[:menu]  %>
<% end %>
<div class="cake_menu">
  <% @w =  %w{index shef recipe price dost}%>
  <% ff=0 %>
  <% %w{торты шеф-кондитер рецепты цены условия&nbspдоставки}.each do |action| -%>
