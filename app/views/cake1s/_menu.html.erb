      <%= link_to action, {:controller=>'cake1s' ,:action=>@w[ff].to_s, :menu=>ff} , :class=>'cake_act'  %>
      <% end %>
  <% else  %>
      <% if action == 'торты' %>
      <a href="/торты на заказ" class="cake_p"> торты  </a>
